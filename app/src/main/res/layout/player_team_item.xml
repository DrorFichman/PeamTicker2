<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/player_team_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="3dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/res_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:padding="1dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/res_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:padding="1dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/res_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:padding="1dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/res_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:padding="1dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/res_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:padding="1dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/player_gk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text="GK"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/player_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text="D"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/player_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text="PM"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/player_breaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text="B"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="8sp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right">

        <TextView
            android:id="@+id/player_moved_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/player_team_name"
            android:text="*"
            android:visibility="gone" />

        <TextView
            android:id="@+id/player_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>