<resources>
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--TODO better styles-->
    <style name="menu_labels_style">
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="redHeadline" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="greenHeadline" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regularHeadline" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
